{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@errors/*": [
                "./src/errors/*"
            ],
            "@http/*": [
                "./src/http/*"
            ],
            "@routes/*": [
                "./src/routes/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@bin/*": [
                "./src/bin/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}