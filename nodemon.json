{
    "watch": [
        "bin/",
        "errors/",
        "http/",
        "public/",
        "routes/",
        "views/",
        ".env",
        "app.js",
        "package.json"
    ],
    "ext": "js,json",
    "ignore": [
        "node_modules",
        "logs"
    ],
    "exec": "node /app/bin/serve",
    "env": {
        "CHOKIDAR_USEPOLLING": "true"
    }
}
