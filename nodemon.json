{
    "restartable": "rs",
    "ignore": [
        "node_modules/",
        ".git/",
        "build/",
        ".eslintrc.js",
        ".prettierrc.js",
        ".editorconfig",
        ".git",
        ".gitignore",
        "README.md",
        "nodemon.json",
        "package.json",
        "package-lock.json",
    ],
    "verbose": false,
    "execMap": {
        "ts": "node --loader ts-node/esm -r tsconfig-paths/register"
    },
    "watch": [
        "src/"
    ],
    "ext": "js,ts,json,ejs"
}